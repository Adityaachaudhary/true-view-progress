<svg xmlns="http://www.w3.org/2000/svg" width="800" height="400" viewBox="0 0 800 400">
  <rect width="100%" height="100%" fill="#f8f9fa"/>
  <text x="50%" y="40" fill="#1a1a2e" font-family="Arial" font-size="20" text-anchor="middle">How This Video Tracker Works</text>
  
  <!-- Feature 1 -->
  <g transform="translate(50, 80)">
    <circle cx="20" cy="20" r="15" fill="#4a90e2"/>
    <text x="50" y="25" font-family="Arial" font-size="14">The system only counts unique segments you've watched.</text>
  </g>
  
  <!-- Feature 2 -->
  <g transform="translate(50, 140)">
    <circle cx="20" cy="20" r="15" fill="#4a90e2"/>
    <text x="50" y="25" font-family="Arial" font-size="14">Skipping ahead doesn't count as watching.</text>
  </g>
  
  <!-- Feature 3 -->
  <g transform="translate(50, 200)">
    <circle cx="20" cy="20" r="15" fill="#4a90e2"/>
    <text x="50" y="25" font-family="Arial" font-size="14">Your progress is automatically saved.</text>
  </g>
  
  <!-- Feature 4 -->
  <g transform="translate(50, 260)">
    <circle cx="20" cy="20" r="15" fill="#4a90e2"/>
    <text x="50" y="25" font-family="Arial" font-size="14">The video will resume from where you left off.</text>
  </g>
</svg>